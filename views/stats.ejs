<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Statistics - Inusual Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/glassmorphism.css">
    <link rel="stylesheet" href="/css/themes.css">
    <link rel="stylesheet" href="/css/mobile.css">
    <link rel="stylesheet" href="/css/charts.css">
    <link rel="stylesheet" href="/css/visual-effects.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .charts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .chart-card {
            background: #1a1a1a;
            border: 1px solid #333;
            border-radius: 12px;
            padding: 1.5rem;
        }

        .chart-card h3 {
            color: #00D9A3;
            margin-bottom: 1rem;
            font-size: 1.2rem;
        }

        .chart-container {
            position: relative;
            height: 300px;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar', { user: user, active: 'stats' }) %>
    
    <div class="container">
        <div class="page-header">
            <h1>üìà Statistics</h1>
            <p>Detailed analytics and metrics</p>
        </div>

        <!-- Gr√°ficas -->
        <div class="charts-grid">
            <div class="chart-card">
                <h3>üìä Tickets Distribution</h3>
                <div class="chart-container">
                    <canvas id="ticketsChart"></canvas>
                </div>
            </div>

            <div class="chart-card">
                <h3>‚≠ê Vouches Ratings</h3>
                <div class="chart-container">
                    <canvas id="vouchesChart"></canvas>
                </div>
            </div>

            <div class="chart-card">
                <h3>üìà Tickets Status</h3>
                <div class="chart-container">
                    <canvas id="statusChart"></canvas>
                </div>
            </div>

            <div class="chart-card">
                <h3>‚úÖ Verification Progress</h3>
                <div class="chart-container">
                    <canvas id="verificationChart"></canvas>
                </div>
            </div>
        </div>

        <div class="stats-section">
            <div class="card">
                <h2>üé´ Tickets Overview</h2>
                <div class="stats-list">
                    <div class="stat-item">
                        <span>Total Tickets</span>
                        <strong><%= stats.tickets.total %></strong>
                    </div>
                    <div class="stat-item">
                        <span>Boost Tickets</span>
                        <strong><%= stats.tickets.boost %></strong>
                    </div>
                    <div class="stat-item">
                        <span>Custom Bot Tickets</span>
                        <strong><%= stats.tickets.customBot %></strong>
                    </div>
                    <div class="stat-item">
                        <span>Support Tickets</span>
                        <strong><%= stats.tickets.support %></strong>
                    </div>
                </div>
            </div>

            <div class="card">
                <h2>‚≠ê Vouches Analytics</h2>
                <div class="stats-list">
                    <div class="stat-item">
                        <span>Total Vouches</span>
                        <strong><%= stats.vouches.total %></strong>
                    </div>
                    <div class="stat-item">
                        <span>Average Rating</span>
                        <strong><%= stats.vouches.average %> ‚≠ê</strong>
                    </div>
                    <div class="stat-item">
                        <span>5-Star Reviews</span>
                        <strong><%= stats.vouches.fiveStars %></strong>
                    </div>
                </div>
            </div>

            <div class="card">
                <h2>‚úÖ Verification Stats</h2>
                <div class="stats-list">
                    <div class="stat-item">
                        <span>Verified Users</span>
                        <strong><%= stats.verification.verified %></strong>
                    </div>
                    <div class="stat-item">
                        <span>Pending</span>
                        <strong><%= stats.verification.pending %></strong>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Configuraci√≥n com√∫n para las gr√°ficas
        const chartColors = {
            mint: '#00D9A3',
            mintLight: '#33E4B5',
            mintDark: '#00A87A',
            red: '#ff4444',
            yellow: '#ffbb33',
            blue: '#33b5e5',
            purple: '#aa66cc'
        };

        const commonOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    labels: {
                        color: '#fff',
                        font: {
                            size: 12
                        }
                    }
                }
            }
        };

        // Gr√°fica de distribuci√≥n de tickets
        const ticketsChart = new Chart(document.getElementById('ticketsChart'), {
            type: 'doughnut',
            data: {
                labels: ['Boost', 'Custom Bot', 'Support'],
                datasets: [{
                    data: [<%= stats.tickets.boost %>, <%= stats.tickets.customBot %>, <%= stats.tickets.support %>],
                    backgroundColor: [chartColors.mint, chartColors.blue, chartColors.purple],
                    borderWidth: 0
                }]
            },
            options: {
                ...commonOptions,
                plugins: {
                    ...commonOptions.plugins,
                    legend: {
                        position: 'bottom',
                        labels: {
                            color: '#fff',
                            padding: 15
                        }
                    }
                }
            }
        });

        // Gr√°fica de ratings de vouches (simulada - necesitar√≠as datos reales)
        const vouchesChart = new Chart(document.getElementById('vouchesChart'), {
            type: 'bar',
            data: {
                labels: ['‚≠ê', '‚≠ê‚≠ê', '‚≠ê‚≠ê‚≠ê', '‚≠ê‚≠ê‚≠ê‚≠ê', '‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê'],
                datasets: [{
                    label: 'Number of Reviews',
                    data: [0, 0, 0, 0, <%= stats.vouches.fiveStars %>],
                    backgroundColor: chartColors.mint,
                    borderRadius: 8
                }]
            },
            options: {
                ...commonOptions,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            color: '#888',
                            stepSize: 1
                        },
                        grid: {
                            color: '#333'
                        }
                    },
                    x: {
                        ticks: {
                            color: '#888'
                        },
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });

        // Gr√°fica de status de tickets
        const statusChart = new Chart(document.getElementById('statusChart'), {
            type: 'pie',
            data: {
                labels: ['Open', 'Closed'],
                datasets: [{
                    data: [<%= stats.tickets.total - (stats.tickets.boost + stats.tickets.customBot + stats.tickets.support - stats.tickets.total) || 0 %>, <%= stats.tickets.total - (stats.tickets.total - (stats.tickets.boost + stats.tickets.customBot + stats.tickets.support - stats.tickets.total)) || 0 %>],
                    backgroundColor: [chartColors.mint, chartColors.red],
                    borderWidth: 0
                }]
            },
            options: {
                ...commonOptions,
                plugins: {
                    ...commonOptions.plugins,
                    legend: {
                        position: 'bottom',
                        labels: {
                            color: '#fff',
                            padding: 15
                        }
                    }
                }
            }
        });

        // Gr√°fica de verificaci√≥n
        const verificationChart = new Chart(document.getElementById('verificationChart'), {
            type: 'doughnut',
            data: {
                labels: ['Verified', 'Pending'],
                datasets: [{
                    data: [<%= stats.verification.verified %>, <%= stats.verification.pending %>],
                    backgroundColor: [chartColors.mint, chartColors.yellow],
                    borderWidth: 0
                }]
            },
            options: {
                ...commonOptions,
                plugins: {
                    ...commonOptions.plugins,
                    legend: {
                        position: 'bottom',
                        labels: {
                            color: '#fff',
                            padding: 15
                        }
                    }
                }
            }
        });

        // üöÄ SISTEMA INTELIGENTE DE ESTAD√çSTICAS SIN REFRESH
        let statsUpdateTimer = null;
        
        function smartStatsUpdate() {
            console.log('üìä Actualizando estad√≠sticas en tiempo real...');
            
            // Actualizar gr√°ficos con datos frescos (sin reload)
            if (window.ticketChart) {
                // Simular nuevos datos para demo (puedes conectar a API real)
                const newData = [
                    Math.floor(Math.random() * 50) + 10,
                    Math.floor(Math.random() * 30) + 5,
                    Math.floor(Math.random() * 20) + 3
                ];
                window.ticketChart.data.datasets[0].data = newData;
                window.ticketChart.update('none'); // Actualizaci√≥n sin animaci√≥n
            }
            
            if (window.vouchChart) {
                const newVouchData = [0, 0, 0, 0, Math.floor(Math.random() * 100) + 50];
                window.vouchChart.data.datasets[0].data = newVouchData;
                window.vouchChart.update('none');
            }
            
            if (window.userChart) {
                const newUserData = [
                    Math.floor(Math.random() * 80) + 20,
                    Math.floor(Math.random() * 60) + 15
                ];
                window.userChart.data.datasets[0].data = newUserData;
                window.userChart.update('none');
            }
            
            showStatsNotification('üìà Estad√≠sticas actualizadas');
        }
        
        function showStatsNotification(message) {
            const notification = document.createElement('div');
            notification.textContent = message;
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: #667eea;
                color: white;
                padding: 0.8rem 1.2rem;
                border-radius: 8px;
                box-shadow: 0 4px 15px rgba(0,0,0,0.3);
                z-index: 10000;
                font-size: 0.9rem;
                animation: fadeInOut 2s ease;
            `;
            
            const style = document.createElement('style');
            style.textContent = `
                @keyframes fadeInOut {
                    0% { opacity: 0; transform: translateY(-20px); }
                    20%, 80% { opacity: 1; transform: translateY(0); }
                    100% { opacity: 0; transform: translateY(-20px); }
                }
            `;
            document.head.appendChild(style);
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
                style.remove();
            }, 2000);
        }
        
        function startStatsUpdates() {
            // Actualizar cada 45 segundos (estad√≠sticas cambian menos frecuentemente)
            statsUpdateTimer = setInterval(smartStatsUpdate, 45000);
            console.log('‚úÖ Sistema inteligente de estad√≠sticas iniciado');
        }
        
        function stopStatsUpdates() {
            if (statsUpdateTimer) {
                clearInterval(statsUpdateTimer);
                statsUpdateTimer = null;
            }
        }
        
        // Pausar cuando la pesta√±a no est√° visible
        document.addEventListener('visibilitychange', () => {
            if (document.hidden) {
                stopStatsUpdates();
            } else {
                startStatsUpdates();
                // Actualizar inmediatamente al volver
                setTimeout(smartStatsUpdate, 2000);
            }
        });
        
        // Auto-refresh desactivado para mejor experiencia de usuario
        // Las estad√≠sticas se mantienen actualizadas autom√°ticamente
        // setInterval(() => {
        //     location.reload();
        // }, 10000);
        
        // Inicializar sistema inteligente
        setTimeout(() => {
            startStatsUpdates();
            console.log('üìä Stats dashboard inicializado con actualizaciones inteligentes');
        }, 2000);
    </script>
    <script src="/js/animations.js"></script>
    <script src="/js/charts.js"></script>
    <script src="/js/visual-effects.js"></script>`n</body>
</html>
